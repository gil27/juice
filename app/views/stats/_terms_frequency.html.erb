<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Terms Frequency</h3>
      </div>
      <div class="panel-body">
        <div id="morris-area-chart"></div>
      </div>
    </div>
  </div>
</div>


<script>
  $.get({
    url: '<%= root_path %>'
  }).done(function() {
    Morris.Bar({
      element: 'morris-area-chart',
      data: <%= raw @graph %>,
      xkey: 'y',
      ykeys: ['x'],
      labels: ['Times:']
    });
  });
</script>
